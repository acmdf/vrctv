set windows-shell := ["powershell.exe", "-c"]
set dotenv-load := true

dev:
    systemfd --no-pid -s http::3000 -- cargo watch --ignore '*.sqlite' -x "run -p project-lily-server"

run:
    cargo run -p project-lily-server

send-server:
    # sync the code to the server
    scp -r ./project-lily-server root@10.64.64.30:/root/project-lily
    scp -r ./project-lily-common root@10.64.64.30:/root/project-lily
    scp ./* root@10.64.64.30:/root/project-lily